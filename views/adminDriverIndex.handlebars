<h1 class="text-center">Drivers</h1>
<div class="container">
    <a href="/tw/adminAddDriver" class="btn btn-primary">New Driver</a>
   <table class="table table-striped mt-4">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile Number</th>
            <th>Street</th>
            <th>City</th>
            <th>Zipcode</th>
            <th>Date of birth</th>
            <th>Licence No.</th>
            <th>Action</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.fname}}</td>
            <td>{{this.dataValues.lname}}</td>
            <td>{{this.dataValues.email}}</td>
            <td>{{this.dataValues.phoneNumber}}</td>
            <td>{{this.dataValues.street}}</td>
            <td>{{this.dataValues.city}}</td>
            <td>{{this.dataValues.zipcode}}</td>
            <td>{{this.dataValues.dob}}</td>
            <td>{{this.dataValues.licence}}</td>
            <td>
                <a href="/tw/editDriver/{{this.dataValues.id }}">Edit</a> |
                <a href="/tw/deleteDriver/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
